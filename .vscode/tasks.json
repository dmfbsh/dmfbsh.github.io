{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "1. Build Shropshire Site",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["Convert MD to YML", "Generate Recents", "Jekyll Shropshire Site"],
            "problemMatcher": []
        },
        {
            "label": "Jekyll Shropshire Site",
            "type": "shell",
            "command": "jekyll build --verbose --config _config1.yml",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "4. Jekyll F1 Stamps Site",
            "type": "shell",
            "command": "jekyll build --verbose --config _config2.yml",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Recents",
            "type": "shell",
            "command": "ruby generate_recents.rb",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "_ruby"
            },
            "problemMatcher": []
        },
        {
            "label": "Convert MD to YML",
            "type": "shell",
            "command": "ruby convert_md_to_yml.rb",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "_ruby"
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy - INI File",
            "type": "shell",
            "command": "COPY /Y \"Shropshire Photography.ini\" \"${config:DB_dest}\"",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "_database"
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy - sqlite3.dll File",
            "type": "shell",
            "command": "COPY /Y \"sqlite3.dll\" \"${config:DB_dest}\"",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "_database"
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy - Shropshire Photography.ahk",
            "type": "shell",
            "command": "${config:vscode-ahk-plus.compilePath}",
            "args": ["/in", "Shropshire Photography.ahk", "/out", "${config:DB_dest}\\Shropshire Photography.exe"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "_database"
            },
            "problemMatcher": []
        },
        {
            "label": "Deploy - Shropshire Features.ahk",
            "type": "shell",
            "command": "${config:vscode-ahk-plus.compilePath}",
            "args": ["/in", "Shropshire Features.ahk", "/out", "${config:DB_dest}\\Shropshire Features.exe"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "_database"
            },
            "problemMatcher": []
        },
        {
            "label": "2. Deploy AHK",
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["Deploy - INI File", "Deploy - sqlite3.dll File", "Deploy - Shropshire Photography.ahk", "Deploy - Shropshire Features.ahk"],
            "problemMatcher": []
        },
        {
            "label": "3. Deploy - Church Subimages.ahk",
            "type": "shell",
            "command": "${config:vscode-ahk-plus.compilePath}",
            "args": ["/in", "Church Subimages.ahk", "/out", "${config:DB_dest}\\Church Subimages.exe"],
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "options": {
                "cwd": "_database"
            },
            "problemMatcher": []
        }
    ]
}