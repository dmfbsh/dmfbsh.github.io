{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy AHK Scripts",
            "type": "shell",
            "command": "ant -buildfile ahkbuild.xml",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Documentation Site",
            "type": "shell",
            "command": "jekyll build --verbose --config _config0.yml",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Shropshire Site",
            "type": "shell",
            "command": "jekyll build --verbose --config _config1.yml",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build F1 Stamps Site",
            "type": "shell",
            "command": "jekyll build --verbose --config _config2.yml",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Recents",
            "type": "shell",
            "command": "ruby generate_recents.rb",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "_ruby"
            },
            "problemMatcher": []
        },
        {
            "label": "Convert MD to YML",
            "type": "shell",
            "command": "ruby convert_md_to_yml.rb",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "options": {
                "cwd": "_ruby"
            },
            "problemMatcher": []
        }
    ]
}